{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitThis": true,
    "baseUrl": ".",
    "paths": {
      "@main/*": ["src/main/*"],
      "@main/config/*": ["src/main/config/*"],
      "@main/handlers/*": ["src/main/handlers/*"],
      "@main/managers/*": ["src/main/managers/*"],
      "@main/services/*": ["src/main/services/*"],
      "@main/utils/*": ["src/main/utils/*"],
      "@main/core/*": ["src/main/core/*"],
      
      "@preload": ["src/preload/index.d.ts"],
      
      "@shared/*": ["src/shared/*"],
      "@shared/ipc/*": ["src/shared/ipc/*"],
      "@shared/types/*": ["src/shared/types/*"],
      "@shared/logger/*": ["src/shared/logger/*"],
      "@shared/constants/*": ["src/shared/constants/*"],
      "@shared/utils/*": ["src/shared/utils/*"],
      
      "@renderer/*": ["src/renderer/*"],
      "@renderer/app/*": ["src/renderer/app/*"],
      "@renderer/layouts/*": ["src/renderer/layouts/*"],
      "@renderer/pages/*": ["src/renderer/pages/*"],
      "@renderer/components/*": ["src/renderer/components/*"],
      "@renderer/hooks/*": ["src/renderer/hooks/*"],
      "@renderer/lib/*": ["src/renderer/lib/*"],
      "@renderer/types/*": ["src/renderer/types/*"],
      "@renderer/styles/*": ["src/renderer/styles/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist-*"]
}
